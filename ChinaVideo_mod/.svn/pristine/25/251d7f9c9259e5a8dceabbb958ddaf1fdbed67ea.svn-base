<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/shop_noble_host_pop"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bg_1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="5K财富经验"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/qiandao_jingyan" />

                    <ImageView
                        android:id="@+id/icon_bg_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第一天"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bg_2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="5K财富经验"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/qiandao_jingyan" />

                    <ImageView
                        android:id="@+id/icon_bg_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第二天"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bg_3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="8K财富经验"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/qiandao_jingyan" />

                    <ImageView
                        android:id="@+id/icon_bg_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第三天"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bg_4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="1W财富经验"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/qiandao_jingyan" />

                    <ImageView
                        android:id="@+id/icon_bg_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第四天"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bg_5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="1.2W经验"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/qiandao_jingyan" />

                    <ImageView
                        android:id="@+id/icon_bg_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第五天"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bg_6"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="QQ座驾3天"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/sign_three" />

                    <ImageView
                        android:id="@+id/icon_bg_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第六天"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bg_7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="玫瑰x10"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/sign_thirty" />

                    <ImageView
                        android:id="@+id/icon_bg_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第七天"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/qiandao_dituweiqian" >

                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/qiandao_title_bg"
                        android:gravity="center_horizontal"
                        android:text="5K财富经验"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_day1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/qiandao_jingyan" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/qiandao_biaoqian" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="第一天"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qiandao_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_onclick_selected"
            android:gravity="center"
            android:padding="6dp" >

            <TextView
                android:id="@+id/tv_wyqd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我要签到"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="签到奖励会放到包裹"
            android:textColor="#7e7e7e"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/qiandao_biaoti" />

    <ImageView
        android:id="@+id/qiandao_guanbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/qiandao_guanbi" />

</RelativeLayout>