<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pub_chat_relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/item_background"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ListView
          android:background="@color/item_background"
        android:id="@+id/live_chat_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/listview_line"
        android:dividerHeight="1dp"
        android:listSelector="#00000000" />

    <ListView
        android:id="@+id/chat_gift_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="3dp"
        android:listSelector="#00000000" />

    <RelativeLayout
        android:id="@+id/chat_gift_donghua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_gift_bg_1"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/chat_gift_dh_say1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_bg"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chat_gift_dh_icon1"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:id="@+id/chat_gift_dh_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hotpink"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/gift_scroll_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/gift_scroll" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_gift_donghua2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_gift_donghua"
        android:background="@drawable/chat_gift_bg_1"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/chat_gift_dh_say2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_bg"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chat_gift_dh_icon2"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:id="@+id/chat_gift_dh_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hotpink"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/gift_scroll_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/gift_scroll" />
    </RelativeLayout>

</RelativeLayout>