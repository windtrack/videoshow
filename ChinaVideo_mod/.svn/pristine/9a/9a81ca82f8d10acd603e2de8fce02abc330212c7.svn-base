<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_cor_bg" >

    <ImageView
          android:visibility="gone"
        android:id="@+id/close_magic_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_close_on" />

    <LinearLayout
        android:id="@+id/magic_card_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magic_card_title"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"  >
        <ImageView
            android:layout_marginBottom="20dp"
            android:id="@+id/card_copper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/card_copper" />

        <ImageView
            android:layout_marginBottom="20dp"
            android:id="@+id/card_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/card_silver" />

        <ImageView
            android:layout_marginBottom="20dp"
            android:id="@+id/card_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/card_gold" />
    </LinearLayout>

</RelativeLayout>