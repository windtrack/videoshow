<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/anchor_icon"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/anchor_icon"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="2.0dip"
        android:paddingTop="2.0dip" >

        <TextView
            android:id="@+id/anchor_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#0c0f0e"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/anchor_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:layout_weight="0.0"
            android:background="@drawable/online_num_bg"
            android:drawableLeft="@drawable/icon_zaixianrenshu"
            android:drawablePadding="2.0dip"
            android:gravity="right"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="9.0sp" />

        <ImageView
            android:id="@+id/anchor_not_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:layout_weight="0.0"
            android:gravity="right"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:src="@drawable/buzaixian"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>