<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_seleted"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/rank_numbler"
        android:layout_width="40dp"
        android:layout_height="79dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp" />

    <LinearLayout
        android:id="@+id/history_item_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rank_numbler"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/rank_item_img"
            android:layout_width="104dp"
            android:layout_height="79dp"
            android:background="@color/transparent"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/history_item_two"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/history_item_one"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/rank_item_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/pr24" />

            <TextView
                android:id="@+id/rank_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小乐"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/rank_title"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主播ID："
                android:textColor="@color/bg_dialog"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rank_item_anchorid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小乐"
                android:textColor="@color/bg_dialog"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fensi_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/r_fss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝数："
                android:textColor="@color/bg_dialog"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rank_item_fansnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8888"
                android:textColor="@color/bg_dialog"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>