<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/yrj_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/qiandao_guanbi" />
    <LinearLayout
        android:layout_below="@+id/yrj_close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shop_noble_host_pop"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="恭喜您"
            android:textColor="#ff730d"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/yrj_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="获得2个钥匙"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/yrj_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yr_yaoshi" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>