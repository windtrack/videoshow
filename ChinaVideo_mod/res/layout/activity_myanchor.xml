<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/anchor_list_title"
        layout="@layout/title_back" />

    <com.zhipu.chinavideo.util.NoScrollViewPager
        android:id="@+id/myanchor_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:id="@+id/bottom_line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_background" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <RadioButton
            android:id="@+id/my_shouhu"
            style="@style/main_tab_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我的守护" />

        <RadioButton
            android:id="@+id/my_guanzhu"
            style="@style/main_tab_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我的关注" />

        <RadioButton
            android:id="@+id/my_dingyue"
            style="@style/main_tab_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我的订阅" />
    </RadioGroup>

</LinearLayout>