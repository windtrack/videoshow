<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:background="@color/white" >

    <include
        android:id="@+id/guizu_loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/livehall_loading"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/not_guizu_layout"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/anchor_guizu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/vip_icon" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anchor_guizu_icon"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="开通VIP,享受独有特权,尊享高贵"
            android:textColor="@color/item_textcolor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/kaitong_guizu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_onclick_selected"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="立即开通"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/is_vip_layout"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <com.zhipu.chinavideo.util.CircularImage
                android:id="@+id/anchor_vip_icon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/mine_icon_no" />

            <TextView
                android:id="@+id/anchor_vip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/anchor_vip_icon"
                android:text="冷血动物"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/anchor_vip_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/guard_on" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/item_linecolor" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="您当前VIP等级为2,保级仅需150乐币,再充700万乐币就可升级到VIP3哦!"
            android:textSize="16sp" >
        </TextView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/vip_endtime"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="有效期至：2015.12.31"
                android:textColor="@color/huise_zi"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shouhu_xufei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_onclick_selected"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:text="续  费"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>