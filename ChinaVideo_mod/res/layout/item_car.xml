<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/mylistcar_item_icon"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rl_name_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mylistcar_item_icon"
        android:background="@color/item_textcolor"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/carlist_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="QQ轿车"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/carlist_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="500万/月"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>