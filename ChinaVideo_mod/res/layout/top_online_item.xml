<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_seleted" >

    <RelativeLayout
        android:id="@+id/context_layout"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:padding="5.0dip" >
        <ImageView
            android:id="@+id/top_online_anchor_icon"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:cacheColorHint="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/loading_img" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/top_online_anchor_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top_online_anchor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主播名字"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/online_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_zaixianrenshu" />

                <TextView
                    android:id="@+id/top_online_anchor_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/online_num"
                    android:textColor="#696969"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/title_zhibo_icon" />
    </RelativeLayout>

</RelativeLayout>