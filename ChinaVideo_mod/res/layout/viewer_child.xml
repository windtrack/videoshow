<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal" >

        <CheckedTextView
            android:visibility="gone"
            android:id="@+id/pub"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/new_pub_chat"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="公聊"
            android:textColor="@color/white" />

        <CheckedTextView
            android:visibility="gone"
            android:id="@+id/pri"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/new_pri_chat"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="TA"
            android:textColor="@color/white" />

        <CheckedTextView
            android:id="@+id/files"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/new_person_file"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="档案"
            android:textColor="@color/white" />

        <CheckedTextView
            android:id="@+id/gift"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/new_gift"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="礼物"
            android:textColor="@color/white" />

        <CheckedTextView
            android:id="@+id/limit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/new_limit"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="禁言"
            android:textColor="@color/white" />

        <CheckedTextView
            android:id="@+id/unlimit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/new_delimit"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="解禁"
            android:textColor="@color/white" />

        <CheckedTextView
            android:visibility="gone"
            android:id="@+id/kickout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/new_kickout"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="踢人"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>